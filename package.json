  "bugs": {
    "url": "https://github.com/jerler1/Thiftshop/issues"
  },
  "homepage": "https://github.com/jerler1/Thiftshop#readme",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "connect-mongo": "^4.2.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "if-env": "^1.0.4",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.11.17",
    "mongoose-currency": "^0.2.0",
    "stripe": "^8.137.0",
    "tailwindcss": "^2.0.3"
  },
  "devDependencies": {
    "concurrently": "^6.0.0",
    "nodemon": "^2.0.7"
  }
